@model IEnumerable<DarulAman.Models.tbl_Donation>

@{
    ViewBag.Title = "Index";
}

<h1 class="customh1">Index</h1>
<center>
    <p>
        <a href="@Url.Action("Create", "tbl_Donation")" class="btn btn-lg fa fa-pencil customp1"> Create</a>

    </p>
</center>
<table class="table table-borderl table-active">
    <tr>
        <th class="customth">
            FIRST_NAME
        </th>
        <th>
            LAST_NAME
        </th>
        <th>
            EMAIL
        </th>
        <th>
            AMOUNT
        </th>
        <th>
            STATUS
        </th>
        <th>
            DATE
        </th>
        <th></th>
    </tr>

    @foreach (var donation in Model)
    {
        <tr>
            <td>
                @donation.FIRST_NAME
            </td>
            <td>
                @donation.LAST_NAME
            </td>
            <td>
                @donation.EMAIL
            </td>
            <td>
                @donation.AMOUNT
            </td>
            <td>
                @donation.STATUS
            </td>
            <td>
                @donation.DATE
            </td>
            <td align="center">
                <a class="btn btn-primary fa fa-edit" href="@Url.Action("Edit", "tbl_Donation", new { id=donation.DONATION_ID }) "></a>|
                <a class="btn btn-success fa fa-book" href="@Url.Action("Details", "tbl_Donation", new { id=donation.DONATION_ID }) "></a>|
                <a class="btn btn-danger fa fa-trash" href="@Url.Action("Delete", "tbl_Donation", new { id=donation.DONATION_ID }) "></a>

            </td>
        </tr>
    }

</table>
