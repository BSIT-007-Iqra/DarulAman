@{ Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<!-- Page Header Start -->
<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Register here to meet your Community</h2>
            </div>
            <div class="col-12">
                <a href="@Url.Action("IndexCustomer","Home")">Home</a>
                <a href="@Url.Action("Registration","Home")">Registration</a>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<div class="single">
    <div class="container">
        <div class="row">
            <div class=" col-md-12">
                <div class="form2">
                    <div class="comment-form">
                        <center> <h2 style="color:#FDBE33;">Enter your Information</h2></center><br />
                        <form>
                            <div class="form-group">
                                <label for="name" style="color:black"> First Name *</label>
                                <input type="text" class="form-control" id="name" required="required">
                            </div>
                            <div class="form-group">
                                <label for="name" style="color:black"> Last Name *</label>
                                <input type="text" class="form-control" id="name" required="required">
                            </div>
                            <div class="form-group">
                                <label for="tel#" style="color:black">Tel# *</label>
                                <input type="tel" class="form-control" id="tel#">
                            </div>
                            <div class="form-group">
                                <label for="email" style="color:black">Email *</label>
                                <input type="email" class="form-control" id="email" required="required" />
                            </div>
                            <div class="form-group">
                                <label for="id" style="color:black">Profession *</label>
                                <input type="text" class="form-control" id="id" required="required" />
                            </div>

                            <div class="form-group">
                                <p style="color:black">Gender *</p>
                                <div>

                                    <input type="radio" id="female" class="custom-radio" name="Gender" value="HTML" required>&nbsp;
                                    <label for="female">Female</label><br>
                                    <input type="radio" id="male" name="Gender" class="custom-radio" value="CSS" required>&nbsp;
                                    <label for="male">Male</label><br>
                                    <input type="radio" id="others" name="Gender" class="custom-radio" value="JavaScript" required>&nbsp;
                                    <label for="others">Others</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="id" style="color:black">Country *</label>
                                <input type="text" class="form-control" id="id" required="required">
                            </div>
                            <div class="form-group">
                                <label for="id" style="color:black">City *</label>
                                <input type="text" class="form-control" id="id" required="required">
                            </div>
                            <div class="form-group">
                                <label for="id" style="color:black">Address </label>
                                <input type="text" class="form-control" id="id">
                            </div>
                           <div class="form-group">
                                <label for="message" style="color:black">Message *</label>
                                <textarea id="message" cols="30" rows="5" class="form-control"></textarea>
                            </div>

                            <div class="form-group">
                                <input type="checkbox" required />
                                <span>
                                    I Accept the <a href="#" style="color:#FDBE33 " required="required"><b>Terms and Conditions</b></a>
                                </span>
                            </div>
                            <br />



                            <div class="form-group">
                                <input type="submit" value="Submit" class="btn btn-custom btn-block">
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>